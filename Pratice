//1
func checkMonth (Month: Int) {
        switch Month {
        case 1:
            print (" Tháng có 31 ngày")
        case 3:
            print (" Tháng có 31 ngày")
        case 5:
            print (" Tháng có 31 ngày")
        case 7:
            print (" Tháng có 31 ngày")
        case 8:
            print (" Tháng có 31 ngày")
        case 10:
            print (" Tháng có 31 ngày")
        case 12:
            print (" Tháng có 31 ngày")
            break
        case 4:
            print(" Tháng có 30 ngày")
        case 6:
            print(" Tháng có 30 ngày")
        case 9:
            print(" Tháng có 30 ngày")
        case 11:
            print (" Tháng có 30 ngày")
            break
        case 2:
            print (" Nếu năm nhuận thì đó thì có 29 ngày")
            print (" Nếu khong phải năm nhuận thì có 28 ngày")
        default:
            print (" Bạn đã nhập lụi rồi")
        }
}
print(checkMonth(Month: 2))


