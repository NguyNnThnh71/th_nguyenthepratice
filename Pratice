// 7
let soHang = 3

for i in 0..<soHang
{
    var empty = ""

    for a in 0..<(soHang + 1)
    {
        let x = soHang - i

        if (a > x) {
            empty = empty + "*"
        } else {
            empty = empty + " "
        }
    }
    
    for h in 0..<(i+1)
    {
        empty = empty + "*"
    }
    
    print(empty)
}

